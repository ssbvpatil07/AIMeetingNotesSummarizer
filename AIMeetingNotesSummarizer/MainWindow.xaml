<Window x:Class="AIMeetingNotesSummarizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIMeetingNotesSummarizer"
        xmlns:vm="clr-namespace:AIMeetingNotesSummarizer.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>


        <!-- Left: Meetings list -->
        <ListBox Grid.Column="0" ItemsSource="{Binding Meetings}" SelectedItem="{Binding SelectedMeeting}" DisplayMemberPath="Title" />


        <!-- Middle: Transcript -->
        <DataGrid Grid.Column="1" ItemsSource="{Binding SelectedMeeting.Transcript}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Start" Binding="{Binding Start}" Width="90"/>
                <DataGridTextColumn Header="Speaker" Binding="{Binding Speaker}" Width="140"/>
                <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Right: Summary & Actions -->
        <StackPanel Grid.Column="2" Margin="8">
            <TextBlock Text="Summary" FontSize="16" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedMeeting.Summary.ShortSummary, Mode=TwoWay}" AcceptsReturn="True" Height="120"/>
            <Button Content="Summarize" Command="{Binding SummarizeSelectedCommand}" Margin="0,8,0,0"/>
            <TextBlock Text="Action Items" FontWeight="Bold" Margin="0,16,0,4"/>
            <ItemsControl ItemsSource="{Binding SelectedMeeting.Summary.ActionItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Done}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Description}" Margin="8,0,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                <Button Content="Import Audio (Stub)" Command="{Binding ImportAudioCommand}" />
                <Button Content="Save" Command="{Binding SaveMeetingCommand}" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>